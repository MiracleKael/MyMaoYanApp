<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:id="@+id/rl_play"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_hot_film_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_hot_play"
                android:src="@drawable/play01"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hot_flimname"
                    android:text="海洋奇缘"
                    android:textColor="#2C2C2C"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_hot_threeD"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/iv_hot_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_hot_imax"
                    android:src="@drawable/iv_hot_imax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="观众"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_hot_score"
                    android:layout_marginLeft="3dp"
                    android:text="9.2"
                    android:textColor="#FFB913"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_hot_focus"
                android:text="神奇动物城，法师显超能"
                android:textSize="12dp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_hot_showinfo"
                android:layout_marginTop="3dp"
                android:text="今天165家影院放映2090场"
                android:textSize="12dp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:id="@+id/btn_hot_buy"
                android:text="购票"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="#F56653"
                android:layout_centerInParent="true"
                android:background="@drawable/hot_btn_buy_shape"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/btn_hot_order"
                android:text="预售"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="#4BB9F4"
                android:layout_centerInParent="true"
                android:background="@drawable/hot_btn_order_shape"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zhuanti_zixun"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:background="#E7E7E7"
            android:layout_height="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:text="专题"
                android:padding="3dp"
                android:textColor="#FFA826"
                android:background="@drawable/zhuanti_shape"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_zhuanti"
                android:layout_marginLeft="10dp"
                android:text="麻瓜必备！神奇动物超全资料库"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:text="咨询"
                android:padding="3dp"
                android:textColor="#FFA826"
                android:background="@drawable/zhuanti_shape"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_zixun"
                android:layout_marginLeft="10dp"
                android:text="不完全菜单解读解开隐秘剧情"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
