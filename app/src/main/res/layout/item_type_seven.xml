<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type_seven_title"
        android:text="评测|你的名字。记忆会褪色，但感觉永远不会"
        android:textSize="16sp"
        android:textColor="#282828"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:id="@+id/type_seven_img"
        android:layout_width="320dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type_seven_from"
            android:text="M影评团"
            android:textColor="#9C9C9C"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/type_seven_watch"
            android:text="10079"
            android:textColor="#9C9C9C"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/a5y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="16dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:id="@+id/type_seven_discuss"
            android:text="38"
            android:textColor="#9C9C9C"
            android:textSize="12sp"
            android:drawableLeft="@drawable/a5d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>