<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:padding="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type_eight_title"
        android:text="dafdsfkljdklafjlf"
        android:textSize="16sp"
        android:textColor="#282828"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        
        <ImageView
            android:id="@+id/type_eight_img1"
            android:layout_width="240dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/type_eight_img2"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="70dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/type_eight_img3"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="70dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type_eight_from"
            android:text="M影评团"
            android:textColor="#9C9C9C"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/type_eight_watch"
            android:text="10079"
            android:textColor="#9C9C9C"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/a5y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="16dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#9C9C9C"
            android:id="@+id/type_eight_discuss"
            android:text="38"
            android:drawableLeft="@drawable/a5d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>