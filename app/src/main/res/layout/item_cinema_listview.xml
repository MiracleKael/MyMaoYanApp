<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cinema_name"
            android:text="青春光线电影院"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/min_price"
            android:layout_marginLeft="5dp"
            android:text="33"
            android:textColor="#F34D42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元起"
            android:textColor="#9E9E9E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/cinema_location"
        android:layout_marginTop="6dp"
        android:text="东城区一号大街56号"
        android:textColor="#949494"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="座"
            android:textSize="12sp"
            android:padding="3dp"
            android:background="@drawable/cinema_text_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="3dp"
            android:text="退"
            android:textSize="12sp"
            android:padding="3dp"
            android:background="@drawable/cinema_text_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="3dp"
            android:text="改签"
            android:textSize="12sp"
            android:padding="3dp"
            android:background="@drawable/cinema_text_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="3dp"
            android:text="小吃"
            android:textColor="#FF9900"
            android:textSize="12sp"
            android:padding="3dp"
            android:background="@drawable/cinema_text_shape2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>