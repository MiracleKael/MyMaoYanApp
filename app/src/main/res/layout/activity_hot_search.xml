<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiaojing.mymaoyanmovie.home.activity.HotSearchActivity">

    <LinearLayout
        android:transitionName="topsearch"
        android:background="#DD403B"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_shape"
            android:drawableLeft="@drawable/search_small"
            android:drawablePadding="2dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:hint="找影视剧、影人、影院"
            android:textColor="#252525"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_cancle"
            android:layout_marginRight="8dp"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:text="热门搜索"
        android:textSize="14sp"
        android:textColor="#727272"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jiaojing.mymaoyanmovie.home.ui.FlowLayout
        android:id="@+id/flowlayout"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jiaojing.mymaoyanmovie.home.ui.FlowLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="分类找片"
            android:textColor="#737373"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@drawable/adk"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="影人"
            android:textColor="#737373"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@drawable/adi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:text="影院"
            android:textColor="#737373"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/adj"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="新闻"
            android:textColor="#737373"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@drawable/adl"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>
